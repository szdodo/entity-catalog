<Window x:Class="EntityCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityCatalog"
        mc:Ignorable="d"
        Title="Catalog" Height="350" Width="525"
        SizeChanged="Window_SizeChanged">
    <Grid>

        <Button Content="Button" HorizontalAlignment="Left" Margin="97,53,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListView Name="lw" Margin="32,103,32,10" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <CheckBox Name="BookCB" Content="Books" HorizontalAlignment="Left" Margin="57,20,0,0" VerticalAlignment="Top" Checked="BookCB_Checked"/>
        <CheckBox Name="DvdCB" Content="Dvds" HorizontalAlignment="Left" Margin="129,20,0,0" VerticalAlignment="Top" Checked="DvdCB_Checked"/>
        <CheckBox Name="VhsCB" Content="VHS" HorizontalAlignment="Left" Margin="194,20,0,0" VerticalAlignment="Top" Checked="VhsCB_Checked"/>
    </Grid>
</Window>
